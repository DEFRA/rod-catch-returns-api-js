{
  "name": "rod-catch-returns-api",
  "version": "0.1.0-rc.5",
  "description": "rod catch returns api js",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint 'src/**/*.js'",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier . --check",
    "prettier:fix": "prettier . --write",
    "format": "npm run prettier:fix && npm run lint:fix",
    "format:check": "npm run prettier && npm run lint",
    "prepare": "husky",
    "docker:infrastructure": "docker compose -f docker/infrastructure.yml build && docker stack deploy -c docker/infrastructure.yml rcri",
    "docker:build-dev": "TAG=dev PROJECT_DOCKERFILE=Dockerfile.dev docker compose -f docker/services.build.yml build",
    "docker:services-dev": "TAG=dev docker stack deploy -c docker/services.dev.yml rcrs",
    "docker:build": "PROJECT_DOCKERFILE=Dockerfile docker-compose -f docker/services.build.yml build",
    "docker:services": "docker stack deploy -c docker/services.yml rcrs",
    "migrate:build": "docker build -f Dockerfile.migrate -t liquibase-migrator .",
    "migrate:up": "docker run --network host -e ACTION=update --rm --env-file .env liquibase-migrator",
    "migrate:down": "docker run --network host -e ACTION='rollback-count --count=1' --rm --env-file .env liquibase-migrator"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/DEFRA/rod-catch-returns-api-js.git"
  },
  "keywords": [
    "rod",
    "catch",
    "returns",
    "api"
  ],
  "author": "DEFRA",
  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/DEFRA/rod-catch-returns-api-js/issues"
  },
  "homepage": "https://github.com/DEFRA/rod-catch-returns-api-js#readme",
  "dependencies": {
    "@defra-fish/dynamics-lib": "^1.49.0",
    "@hapi/hapi": "^21.3.10",
    "@hapi/inert": "^7.1.0",
    "@hapi/vision": "^7.0.3",
    "dotenv": "^16.4.5",
    "hapi-swagger": "^17.3.0",
    "joi": "^17.13.3",
    "pg": "^8.12.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.3"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.8",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "husky": "^9.1.1",
    "jest": "^29.7.0",
    "prettier": "^3.3.3"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "sourceType": "module"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "globalSetup": "./src/test-utils/global-setup.js",
    "setupFilesAfterEnv": [
      "./src/test-utils/setup-files-after-env.js"
    ],
    "transform": {
      "^.+\\.(js|ts)$": "babel-jest"
    }
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "prettier"
    ],
    "env": {
      "node": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "sort-imports": [
        "error"
      ]
    }
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  }
}
