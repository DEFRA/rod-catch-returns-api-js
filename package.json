{
  "name": "rod-catch-returns-api",
  "version": "0.0.1",
  "description": "rod catch returns api js",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "test": "jest",
    "lint": "eslint 'src/**/*.js'",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier . --check",
    "prettier:fix": "npm run prettier -- --write",
    "format": "npm run prettier:fix && npm run lint:fix",
    "format:check": "npm run prettier && npm run lint",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/DEFRA/rod-catch-returns-api-js.git"
  },
  "keywords": [
    "rod",
    "catch",
    "returns",
    "api"
  ],
  "author": "DEFRA",
  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/DEFRA/rod-catch-returns-api-js/issues"
  },
  "homepage": "https://github.com/DEFRA/rod-catch-returns-api-js#readme",
  "dependencies": {
    "@hapi/hapi": "^21.3.10",
    "dotenv": "^16.4.5",
    "pg": "^8.12.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.3"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.8",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "husky": "^9.1.1",
    "jest": "^29.7.0",
    "prettier": "^3.3.3"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "sourceType": "module"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "./src/test-utils/suite-setup.js"
    ],
    "transform": {
      "^.+\\.(js|ts)$": "babel-jest"
    }
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "prettier"
    ],
    "env": {
      "node": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    }
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  }
}
